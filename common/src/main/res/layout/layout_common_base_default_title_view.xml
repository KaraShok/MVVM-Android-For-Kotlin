<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">
        <FrameLayout
                android:id="@+id/layout_common_base_default_title_view_left_container_fl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/layout_common_base_default_title_view_left_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_14"
                    android:visibility="gone"
                    android:textColor="@color/color_333333"
                    android:text=""/>
            <ImageView
                    android:id="@+id/layout_common_base_default_title_view_left_icon_iv"
                    android:layout_width="42dp"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    android:visibility="visible"
                    android:src="@drawable/common_base_icon_back_black"/>
        </FrameLayout>

        <TextView
                android:id="@+id/layout_common_base_default_title_view_title_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:text=""/>

        <FrameLayout
                android:id="@+id/rightContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

            <TextView
                    android:id="@+id/layout_common_base_default_title_view_right_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_14"
                    android:text=""
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone" />

            <ImageView
                    android:id="@+id/layout_common_base_default_title_view_right_icon_iv"
                    android:layout_width="42dp"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    android:visibility="gone"/>
        </FrameLayout>
        <FrameLayout
                android:id="@+id/layout_common_base_default_title_view_right__custom_container_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">

        </FrameLayout>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_EAEEF5"/>

</LinearLayout>