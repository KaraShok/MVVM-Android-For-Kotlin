<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF"
            android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/layout_fgt_main_mine_img_sdv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:roundAsCircle="true"/>

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingBottom="12dp">

            <Button
                    android:id="@+id/layout_fgt_main_mine_login_in_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录/注册"
                    android:textSize="@dimen/sp_12"
                    android:visibility="visible"/>

            <TextView
                    android:id="@+id/layout_fgt_main_mine_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_14"
                    tools:text="Label"/>
        </FrameLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/color_F5F5F5"/>

        <TextView
                android:id="@+id/layout_fgt_main_mine_collect_tv"
                style="@style/style_account_item"
                android:text="我的收藏"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_F5F5F5"/>

        <TextView
                android:id="@+id/layout_fgt_main_mine_todo_tv"
                style="@style/style_account_item"
                android:text="TODO工具"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_F5F5F5"/>

        <TextView
                android:id="@+id/layout_fgt_main_mine_about_tv"
                style="@style/style_account_item"
                android:text="关于"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_F5F5F5"/>

        <TextView
                android:id="@+id/layout_fgt_main_mine_login_out_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:padding="12dp"
                android:text="退出登录"
                android:textColor="@color/colorAccent"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>