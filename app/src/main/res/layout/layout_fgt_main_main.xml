<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.karashok.lib_widget.tab_layout.SegmentTabLayout
            android:id="@+id/layout_fgt_main_main_tab"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            app:tl_bar_color="@color/color_FFFFFF"
            app:tl_indicator_color="@color/color_33AAFF"
            app:tl_indicator_corner_radius="@dimen/dp_4"
            app:tl_tab_padding="20dp"
            app:tl_textBold="BOTH"
            app:tl_textsize="@dimen/sp_12"/>

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/layout_fgt_main_main_content_vp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"/>
</LinearLayout>