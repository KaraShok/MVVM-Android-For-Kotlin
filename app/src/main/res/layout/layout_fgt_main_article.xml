<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.karashok.lib_widget.tab_layout.SlidingTabLayout
            android:id="@+id/layout_fgt_main_article_tab"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/color_FFFFFF"
            app:tl_indicator_corner_radius="3dp"
            app:tl_indicator_height="3dp"
            app:tl_indicator_width="48dp"
            app:tl_textSelectColor="@color/color_333333"
            app:tl_textUnselectColor="@color/color_999999"
            app:tl_textAllCaps="true"
            app:tl_textBold="BOTH"
            app:tl_textsize="15sp" />
    <androidx.viewpager.widget.ViewPager
            android:id="@+id/layout_fgt_main_article_content_vp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"/>
</LinearLayout>